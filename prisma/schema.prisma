datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  user_name      String      @id
  password   String   @unique
  role    Role   
}

model Library {
  Id     Int    @id @default(autoincrement())
  name       String         
  location      String
  photo     String
  desc String
  study_rooms StudyRoom[]
}

model StudyRoom {
  Id     Int    @id @default(autoincrement())
  Lib_Id     Int
  Lib     Library    @relation(fields: [Lib_Id], references: [Id])
  Capacity   Int
  time_limit   Int
  restrictions Restriction[]
  reservations Reservation[]
}

model Restriction {
    StudyroomId Int
    Studyroom StudyRoom @relation(fields: [StudyroomId], references: [Id])
    Id Int @id @default(autoincrement())
    Open DateTime @db.Time(0)
    Close DateTime @db.Time(0)
    Date DateTime @db.Date
    Repetition RestrictionRepetition
}

model Reservation {
  AccountId Int
  StudyRoomId Int
  StudyRoom StudyRoom @relation(fields: [StudyRoomId], references: [Id])
  Start DateTime
  End DateTime
  @@unique([AccountId, StudyRoomId])
}



enum RestrictionRepetition {
    WEEK
    MONTH
    YEAR
    NONE
}

enum Role {
  USER
  ADMIN
}



